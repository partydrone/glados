<!-- off-canvas title bar for 'small' screen -->
<div class="title-bar hide-for-large" data-responsive-toggle="widemenu" data-hide-for="large">
  <div class="title-bar-left">
    <%= link_to root_path do %>
      <%= image_tag("icons/logo.svg") %>
    <% end %>
  </div>
  <div class="title-bar-right">
    <button class="menu-icon" type="button" data-open="offCanvasRight"></button>
  </div>
</div>

<!-- off-canvas right menu -->
<div class="off-canvas position-right hide-for-large" id="offCanvasRight" data-off-canvas data-position="right">
  <ul class="vertical dropdown menu" data-accordion-menu>
    <li class="off-canvas-logo">
      <%= link_to root_path, class:"off-canvas-title" do %>
        <%= image_tag("icons/Wavetronix-white-logo.svg") %>
      <% end %>
    </li>
    <li>
      <div class="site-search-bar input-group">
        <div class="input-group-button">
          <?xml version="1.0" encoding="utf-8"?>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17 17">
            <rect x="12.2" y="10" transform="translate(1 1)matrix(0.7071 -0.7071 0.7071 0.7071 -5.3589 12.9375)" class="st0" width="1.5" height="5.8"/><path class="st0" d="M7.3 14.3c-3.9 0-7-3.1-7-7 0-3.9 3.1-7 7-7 3.9 0 7 3.1 7 7C14.3 11.1 11.1 14.3 7.3 14.3zM7.3 1.8c-3 0-5.5 2.5-5.5 5.5 0 3 2.5 5.5 5.5 5.5 3 0 5.5-2.5 5.5-5.5C12.8 4.2 10.3 1.8 7.3 1.8z"/>
          </svg>
        </div>
        <input class="input-search-bar" type="text"/>
      </div>
    </li>

    <li class="off-canvas-menu-item">
      <%= link_to products_path, class:"off-canvas-title" do %>
        <h3><%= t(".solutions") %></h3>
      <% end %>
    </li>
    <li class="off-canvas-menu-item">
      <a class="off-canvas-title"><h3><%= t(".support") %></h3></a>
      <ul class="menu vertical nested">
        <li><%= link_to "Product Support", support_root_path %></li>
        <li><%= link_to "Frequently Asked Questions", nil %></li>
        <li><%= link_to "Mobile App", support_marketing_app_path %></li>
        <li><%= link_to "Returns", nil %></li>
      </ul>
    </li>
    <li class="off-canvas-menu-item">
      <a class="off-canvas-title"><h3><%= t(".training") %></h3></a>
      <ul class="menu vertical nested">
        <li><%= link_to "Courses", training_courses_path %></li>
        <li><%= link_to "Videos", nil %></li>
      </ul>
    </li>
    <li class="off-canvas-menu-item">
      <a class="off-canvas-title"><h3><%= t(".contact") %></h3></a>
      <ul class="menu vertical nested">
        <li><%= link_to "Locate Your Dealer", contact_path %></li>
        <li><%= link_to "Wavetronix Offices", contact_path %></li>
      </ul>
    </li>
    <li class="off-canvas-menu-item">
      <a class="off-canvas-title"><h3><%= t(".about") %></h3></a>
      <ul class="menu vertical nested">
        <li><%= link_to "About Us", about_path %></li>
        <li><%= link_to "Careers", nil %></li>
        <li><%= link_to "News & Events", news_events_path %></li>
        <li><%= link_to "Legal", legal_path %></li>
      </ul>
    </li>

  </ul>
  <div class="off-canvas-copyright">
    <small>&copy; 2016 Wavetronix, LLC<br/>
    United States</small>
  </div>
</div>

<!-- "wider" top-bar menu for 'large' and up -->
<div id="widemenu" class="top-bar" data-topbar data-no-turbolink>
  <div class="row">
    <div class="top-bar-left">
      <ul class="menu">
        <li>
          <%= link_to root_path, class: "home-logo-link" do %>
            <%= image_tag("icons/logo.svg") %>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu" data-dropdown-menu data-options="disableHover:true;clickOpen:true">

        <li>
          <%= link_to t(".solutions"), products_path %>
        </li>

        <li>
          <%= link_to t(".support"), support_root_path %>
        </li>

        <li>
          <%= link_to t(".training"), training_path %>
        </li>

        <li>
          <%= link_to t(".contact"), contact_path %>
        </li>

        <li>
          <%= link_to t(".about"), about_path %>
        </li>

        <li>
          <a href="#" class="topbar-search">
            <?xml version="1.0" encoding="utf-8"?>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17 17">
              <style type="text/css">
              .st0{fill:#7f7f7f;}
