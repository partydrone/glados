<!-- off-canvas title bar for 'small' screen -->
<div class="title-bar hide-for-large" data-responsive-toggle="widemenu" data-hide-for="large">
  <div class="title-bar-left">
    <%= link_to root_path do %>
      <%= image_tag("icons/logo.svg") %>
    <% end %>
  </div>
  <div class="title-bar-right">
    <button class="menu-icon" type="button" data-open="offCanvasRight"></button>
  </div>
</div>

<!-- off-canvas right menu -->
<div class="off-canvas position-right hide-for-large" id="offCanvasRight" data-off-canvas data-position="right">
  <ul class="vertical dropdown menu" data-accordion-menu>
    <li class="off-canvas-logo">
      <%= link_to root_path, class:"off-canvas-title" do %>
        <%= image_tag("icons/Wavetronix-white-logo.svg") %>
      <% end %>
    </li>
    <li>
      <div class="site-search-bar input-group">
        <div class="input-group-button">
          <?xml version="1.0" encoding="utf-8"?>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17 17">
