      <a href="#" class="ellipsis-link"><%= image_tag('icons/ellipsis16.svg', class: 'small-icon') %></a>
      <ul class="menu">
        <li>
          <%= link_to send("edit_#{ActiveModel::Naming.param_key object.class}_path", object), class: 'admin-edit', title: %(Edit) do %>
