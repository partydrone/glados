          <%= link_to send("#{ActiveModel::Naming.param_key object.class}_path", object), class: 'delete admin-delete', data: {confirm: %(Are you sure you want to delete? This cannot be undone.)}, method: :delete, title: %(Delete) do %>
            Delete
          <% end %>
        </li>
