<% content_for :title, @website_privacy_policy_document.title %>
<div class="row columns">
  <h1>
    <%= @website_privacy_policy_document.title %>
    <div class="button-group radius">
      <%= link_to edit_website_privacy_policy_document_path(@website_privacy_policy_document), class: "button" do %>
        <%= image_tag('icons/edit16.svg', class: "small-icon") %> Edit
      <% end %>
      <%= link_to @website_privacy_policy_document, class: "button", data: { confirm: %(Are you sure you want to delete the "#{l @website_privacy_policy_document.effective_on, format: :long} #{@website_privacy_policy_document.title} Document"?\n\nThis cannot be undone.) }, method: :delete do %>
        <%= image_tag('icons/trash16.svg', class: "small-icon") %> Delete
      <% end %>
    </div>
  </h1>
  <section>
    <p>(Effective <%= l @website_privacy_policy_document.effective_on, format: :long %>)</p>
    <%= raw markdown(@website_privacy_policy_document.body) %>
  </section>
  <section>
    <p>
      <%= link_to "Archive", website_privacy_policy_documents_path, class: "more" %>
    </p>
  </section>
</div>