<% content_for :title, @website_terms_of_use_document.title %>
<div class="row columns">
  <h1>
    <%= @website_terms_of_use_document.title %>
    <div class="button-group radius">

        <%= link_to edit_website_terms_of_use_document_path(@website_terms_of_use_document), class: "button" do %>
          <%= image_tag('icons/edit16.svg', class: "small-icon") %> Edit
        <% end %>

        <%= link_to @website_terms_of_use_document, class: "button", data: { confirm: %(Are you sure you want to delete the "#{l @website_terms_of_use_document.effective_on, format: :long} #{@website_terms_of_use_document.title} Document"?\n\nThis cannot be undone.) }, method: :delete do %>
          <%= image_tag('icons/trash16.svg', class: "small-icon") %> Delete
        <% end %>

    </div>
  </h1>
  <section>
    <p>(Effective <%= l @website_terms_of_use_document.effective_on, format: :long %>)</p>
    <%= raw markdown(@website_terms_of_use_document.body) %>
  </section>
  <section>
    <p>
      <%= link_to "Archive", website_terms_of_use_documents_path, class: "more" %>
    </p>
  </section>
</div>