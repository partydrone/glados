<% content_for :title, @website_terms_of_use_document.title %>
<h1>
  <%= @website_terms_of_use_document.title %>
  <ul class="button-group radius">
    <li>
      <%= link_to edit_website_terms_of_use_document_path(@website_terms_of_use_document), class: "button tiny secondary" do %>
        <span class="fa fa-edit"></span>
        Edit
      <% end %>
    </li>
    <li>
      <%= link_to @website_terms_of_use_document, class: "button tiny secondary", data: { confirm: %(Are you sure you want to delete the "#{l @website_terms_of_use_document.effective_on, format: :long} #{@website_terms_of_use_document.title} Document"?\n\nThis cannot be undone.) }, method: :delete do %>
        <span class="fa fa-trash-o"></span>
        Delete
      <% end %>
    </li>
  </ul>
</h1>
<section>
  <p>(Effective <%= l @website_terms_of_use_document.effective_on, format: :long %>)</p>
  <%= raw markdown(@website_terms_of_use_document.body) %>
</section>
<section>
  <p>
    <%= link_to "Archive", website_terms_of_use_documents_path, class: "more" %>
  </p>
</section>