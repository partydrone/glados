<div class="training-course-card">
	<div class="horizontal menu">
		<h3 class="training-certified"><%= training_course.title %></h3>
		<div class="course-card-left training-hours"><%= training_course.duration %> hours</div>
		<div class="course-card-right">
			<% if training_course.prerequisite_ids != [] %>
				Prerequisites Required
			<% end %>
		</div>
		<p><%= training_course.summary %></p>
		<div class="learn-course">
			<a class="hide-me-on-dropdown expand-container" data-toggle="<%= training_course.title.parameterize %>-toggle"><%= t(".learn_more") %></a>
			<div class="dropdown-pane course-dropdown-container" id="<%= training_course.title.parameterize %>-toggle" data-dropdown data-auto-focus="true">
				<%= embed_youtube_videos_for(training_course.description).html_safe %>
				<% if training_course.prerequisite_ids != [] %>
					<p>To enroll in this course, you must first successfully complete:<br/>
					<% training_course.prerequisite_ids.each do |prereq| %>
						<p class="prereq"><%= TrainingCourse.find(prereq).title %></p>
					<% end %>
				<% end %>
<!-- 				<h6 class="training-certified"><%= t(".certification_on_completion") %></h6> -->
				<a data-toggle="<%= training_course.title.parameterize %>-toggle" class="close-container"><%= t(".hide") %></a>
			</div>
		</div>
	</div>
</div>