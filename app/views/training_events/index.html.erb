<%= content_for :title, t(".title") %>



<div class="page-sub-navigation show-for-large" data-sticky-container>
	<div class="sticky" data-sticky data-anchor="training" data-active-class>
		<div class="row">
			<div class="columns text-right">
				<nav data-magellan data-bar-offset="70">
					<ul class="horizontal menu">
						<li><a href="#events"><%= t(".events") %></a></li>
						<li><a href="#courses"><%= t(".courses") %></a></li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="hide-for-large">
	<div class="page-sub-bottom-nav">
		<nav data-magellan data-bar-offset="50">
			<ul class="menu icon-top expanded">
			 	<li><a href="#events"><%= t(".events") %></a></li>
			 	<li><a href="#courses"><%= t(".courses") %></a></li>
			</ul>
		</nav>
	</div>
</div>

<section class="row training-post-cards" id="events" data-magellan-target='events'>
	<h1><%= t(".events") %></h1>

	<div class="training-input-container large-6 columns">
		<div class="training-input-card">
			<div class="training-request">
				<h4><%= t(".request") %></h4>
				<div class="request-box">
		      <div class="request row">
		        <div class="medium-8 small-10 small-centered columns">
		          <p><%= t(".join_mailing_list") %></p>
		          <form id="events-updates-form">
		            <label>Name</label>
		            <input type="text" name="updates-name">
		            <label>Email</label>
		            <input type="text" name="updates-email">
		            <label>Zip Code or Country</label>
		            <input type="text" name="updates-zip"><br>
		          </form>
		          <button type="submit" form="events-updates-form" value="Submit" class="button rounded expanded">Subscribe</button>
		        </div>
		      </div>
		    </div>
		    <div class="training-request request-host">
		    	<h4><%= t(".want_host") %></h4>
		    	<p><%= t(".host_when_where") %></p>

		    	<%= link_to 'Contact Us', new_training_event_request_path, class:
		    	"button rounded" %>
		    </div>
			</div>
		</div>
	</div>

	<% if @training_events.present? %>
		<%= render partial: 'training_event', collection: @training_events %>
	<% end %>
</section>


<section class="training-courses-section" id="courses" data-magellan-target='courses'>
	<div class="row columns">
		<h1><%= t(".courses") %></h1>
	</div>
	<div class="row">
		<div class="medium-5 columns">
			<div class="support-search-dropdown">
				<section class="products-language-header support-dropdown">
					<select class="products-language-dropdown course_types_list" name="smartsensor">
						<option value="course-type-all">All Courses</option>
						<% @training_course_types.each do |course| %>
							<option value="course-type-<%= course.id %>"><%= course.name %></option>
						<% end %>
					</select>
				</section>
			</div>
		</div>
	</div>
	<div class="row show-course-list">
		<%= render partial: 'training_course', collection: @training_courses %>
	</div>
</section>
