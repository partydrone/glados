<%= form_for @case_study do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :flag %>
  <%= f.select :flag, COUNTRIES.invert.sort %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :posted_on %>
  <%= f.date_field :posted_on, placeholder: 'yyyy-mm-dd' %>
  <%= f.submit nil, class: 'button radius' %>
<% end %>
