<% cache case_study do %>
  <%= content_tag_for :tr, case_study do %>
    <td>
      <%= case_study.title %>
    </td>
    <td>
      <%= l case_study.posted_on.to_date, format: :short %>
    </td>
    <td>
      <%= l case_study.updated_at.to_date, format: :short %>
    </td>
    <td>
      <div class="admin-nav">
        <ul class="dropdown menu" data-dropdown-menu>
          <li>
            <a href="#" class="ellipsis-link"><%= image_tag('icons/ellipsis16.svg', class: 'small-icon') %></a>
            <ul class="menu">
              <li>
                <%= link_to edit_case_study_path(case_study), title: %(Edit "#{case_study.title}") do %>
                  <%= image_tag('icons/edit16.svg', class: 'small-icon') %>
                  Edit
                <% end %>
              </li>
              <li>
                <%= link_to case_study_path(case_study), class: 'delete', data: { confirm: %(Are you sure you want to delete "#{case_study.title}"? This cannot be undone.) }, method: :delete, title: %(Delete "#{case_study.title}") do %>
                  <%= image_tag('icons/trash16.svg', class: 'small-icon') %>
                  Delete
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </td>
  <% end %>
<% end %>
