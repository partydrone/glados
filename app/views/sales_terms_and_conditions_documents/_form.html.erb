<%= form_for @sales_terms_and_conditions_document do |f| %>
  <%= content_tag :div, class: 'alert-box radius alert' do %>
    <strong><%= pluralize @sales_terms_and_conditions_document.errors.count, 'error' %> kept this form from submitting:</strong>
    <ul>
      <% @sales_terms_and_conditions_document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end if @sales_terms_and_conditions_document.errors.any? %>
  <%= f.label :title %>
  <%= f.text_field :title, value: 'Wavetronix Domestic Terms and Conditions of Sale' %>
  <%= f.label :effective_on %>
  <%= f.date_field :effective_on, placeholder: 'yyyy-mm-dd' %>
  <%= f.label :body %>
  <%= f.text_area :body, rows: 20 %>
  <%= f.submit nil, class: 'button radius' %>
<% end %>
