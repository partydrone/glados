<% cache list_item do %>
  <tr>
    <td>
      <%= list_item.name %>
    </td>
    <td>
      <%= list_item.part_number %>
    </td>
    <td>
      <div class="admin-nav">
        <ul class="dropdown menu" data-dropdown-menu>
          <li>
            <a href="#" class="ellipsis-link"><%= image_tag('icons/ellipsis16.svg', class: 'small-icon') %></a>
            <ul class="menu">
              <li>
                <%= link_to edit_product_path(list_item), title: %(Edit "#{list_item.name}") do %>
                  <%= image_tag('icons/edit16.svg', class: 'small-icon') %>
                  Edit
                <% end %>
              </li>
              <li>
                <%= link_to product_path(list_item), class: 'delete', data: {confirm: %(Are you sure you want to delete "#{list_item.name}"? This cannot be undone.)}, method: :delete, title: %(Delete "#{list_item.name}") do %>
                  <%= image_tag('icons/trash16.svg', class: 'small-icon') %>
                  Delete
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </td>
  </tr>
<% end %>
