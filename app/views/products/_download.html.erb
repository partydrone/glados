<% cache download do %>
  <%= content_tag :li do %>
    <%= link_to download.title, attachment_url(download, :file, filename: "#{download.title.parameterize(separator: '_')}"), class: "#{set_class_for_content_type(download.file_content_type)}", download: attachment_url(download, :file, filename: "#{download.title.parameterize(separator: '_')}"), target: '_blank' %>
  <% end if download.file %>
<% end %>
