<% cache software_download do %>
  <%= content_tag :li do %>
    <%= link_to software_download.title, attachment_url(software_download, :file, class: "#{set_class_for_content_type(software_download.file_content_type)}", download: attachment_url(software_download, :file, filename: "#{software_download.title.parameterize}"), target: '_blank' %>
  <% end if software_download.file && software_download.file.exists? %>
<% end %>
