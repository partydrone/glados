<% cache list_item do %>
  <%= content_tag_for :tr, list_item do %>
    <td>
      <%= image_tag list_item.icon_url(public: true), style: 'height: 1em;' if list_item.icon %>
    </td>
    <td>
      <%= list_item.name %>
    </td>
    <td>
      <%= list_item.product_type.name %>
    </td>
    <td>
      <%= render partial: 'options_menu', locals: {object: list_item, instance_name: list_item.name} %>
    </td>
    <td class="handle">
      <%= image_tag 'icons/ellipsisup-small.svg', class: 'small-icon' %>
    </td>
  <% end %>
<% end %>
