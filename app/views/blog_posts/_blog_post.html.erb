<% cache blog_post do %>
  <%= content_tag_for :tr, blog_post do %>
    <td>
      <%= blog_post.title %>
    </td>
    <td>
      <%= l blog_post.posted_on.to_date, format: :short %>
    </td>
    <td>
      <%= l blog_post.updated_at.to_date, format: :short %>
    </td>
    <td>
      <div class="admin-nav">
        <ul class="dropdown menu" data-dropdown-menu data-options="disableHover:true;clickOpen:true;">
          <li>
            <a href="#" class="ellipsis-link"><%= image_tag('icons/ellipsis16.svg', class: 'small-icon') %></a>
            <ul class="menu">
              <li>
                <%= link_to edit_blog_post_path(blog_post), title: %(Edit "#{blog_post.title}"), class: "admin-edit" do %>
                  Edit
                <% end %>
              </li>
              <li>
                <%= link_to blog_post_path(blog_post), class: 'delete admin-delete', data: { confirm: %(Are you sure you want to delete "#{blog_post.title}"? This cannot be undone.) }, method: :delete, title: %(Delete "#{blog_post.title}") do %>
                  Delete
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </td>
  <% end %>
<% end %>
