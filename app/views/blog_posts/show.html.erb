<%= content_for :title, @blog_post.title %>

<div class="social-media-sticky-header" data-sticky-container>
  <div class="sticky" data-sticky>
    <div class="row">
        <nav data-magellan>
          <ul class="horizontal menu">
            <li>
              <%= link_to nil do %>
                <%=image_tag('icons/LinkedIn.svg', class: "icon") %>
              <% end %>
            </li>
            <li>
              <%= link_to nil do %>
                <%=image_tag('icons/Twitter.svg', class: "icon") %>
              <% end %>
            </li>
            <li>
              <%= link_to nil do %>
                <%=image_tag('icons/Facebook.svg', class: "icon") %>
              <% end %>
            </li>
            <li>
              <%= link_to nil do %>
                <%=image_tag('icons/Google.svg', class: "icon") %>
              <% end %>
            </li>
            <li>
              <%= link_to nil do %>
                <%=image_tag('icons/email.svg', class: "icon") %>
              <% end %>
            </li>
          </ul>
        </nav>
    </div>
  </div>
</div>

<section class="article-header">
  <div class="row">
    <div class="large-12 medium-8 medium-offset-2 large-offset-0 columns">
      <h1>
        <%= @blog_post.title %>
        <%= render partial: 'options_menu', locals: {object: @blog_post, instance_name: @blog_post.title} if current_user %>
      </h1>
      <h6>by <%= @blog_post.author %></h6>
      <%= attachment_image_tag @blog_post, :hero_image, fallback: 'http://placehold.it/1600x900' %>
    </div>
  </div>
</section>

<section class="row">
  <div class="large-6 large-offset-1 medium-8 medium-offset-2 columns article-body" id="article-container" data-something data-margin-top="5">
    <h3 class="article-deckhead">
      <%= @blog_post.subtitle %>
      <hr/>
    </h3>
    <%= @blog_post.body.html_safe %>
  </div>
</section>

<section class="article-tags show-for-large">
  <%= t(".tags") %>: <a href="#">News,</a> <a href="#">Loops,</a> <a href="#">California</a>
</section>
