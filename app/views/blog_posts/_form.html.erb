<%= form_for @blog_post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :posted_on %>
  <%= f.date_field :posted_on, placeholder: 'yyyy-mm-dd' %>
  <%= f.submit nil, class: 'button radius' %>
<% end %>
