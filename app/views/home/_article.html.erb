<div class="home-story">
  <%= link_to article do %>
    <div class="home-stories-image">
      <p class="stories-rollover-hidden"><%= article.subtitle.truncate(30, separator: /\s/) if article.subtitle %></p>
      <%= attachment_image_tag article, :hero_image, :fill, 270, 152, fallback: 'http://placehold.it/270x152' %>
    </div>
    <h4><%= article.title %></h4>
    <div class="stories-hidden-text hide-for-small">
      <p><%= article.subtitle.truncate(30, separator: /\s/) if article.subtitle %></p>
    </div>
  <% end %>
</div>
