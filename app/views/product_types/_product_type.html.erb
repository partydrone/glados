<% cache product_type do %>
  <%= content_tag_for :tr, product_type do %>
    <td>
      <%= image_tag product_type.icon_url(public: true), style: 'height: 1em;' if product_type.icon %>
    </td>
    <td>
      <%= product_type.name %>
    </td>
    <td style="width: 3rem;">
      <%= render partial: 'options_menu', locals: {object: product_type, instance_name: product_type.name} %>
    </td>
    <td class="handle" style="width: 3rem;">
      <%= image_tag('icons/ellipsisup-small.svg', class: 'small-icon') %>
    </td>
  <% end %>
<% end %>
