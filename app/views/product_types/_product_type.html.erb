<% cache product_type do %>
  <%= content_tag_for :tr, product_type do %>
    <td>
      <%= product_type.name %>
    </td>
    <td>
      <div class="admin-nav">
        <ul class="dropdown menu" data-dropdown-menu data-options="disableHover:true;clickOpen:true;">
          <li>
            <a href="#" class="ellipsis-link"><%= image_tag('icons/ellipsis16.svg', class: 'small-icon') %></a>
            <ul class="menu">
              <li>
                <%= link_to edit_product_type_path(product_type), title: %(Edit "#{product_type.name}") do %>
                  <%= image_tag('icons/edit16.svg', class: 'small-icon') %>
                  Edit
                <% end %>
              </li>
              <li>
                <%= link_to product_type_path(product_type), class: 'delete', data: { confirm: %(Are you sure you want to delete "#{product_type.name}"? This cannot be undone.) }, method: :delete, title: %(Delete "#{product_type.name}") do %>
                  <%= image_tag('icons/trash16.svg', class: 'small-icon') %>
                  Delete
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </td>
    <td class="handle">
      <%= image_tag('icons/ellipsisup-small.svg', class: 'small-icon') %>
    </td>
  <% end %>
<% end %>
