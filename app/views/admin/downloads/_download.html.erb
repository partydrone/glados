<%= content_tag_for :tr, download do %>
  <td class="admin-left-edit">
    <%= render partial: 'options_edit', locals: {object: download, instance_name: download.title} %>
  </td>
  <td>
    <%= download.download_type.name %>
  </td>
  <td>
    <%= download.title %>
  </td>
  <td>
    <% download.available_locales.each do |l| %>
      <%= content_tag :span, class: 'secondary label' do %>
        <%= humanize_locale(l) %>
        <% Globalize.with_locale(l) do %>
        <%= link_to 'x', admin_download_path(download, translation_locale: l), method: :delete, data: { confirm: %(Are you sure you want to delete this #{humanize_locale l} translation? This cannot be undone.) } %>
        <% end %>
      <% end %>
    <% end %>
  </td>
  <td class="admin-right-delete">
    <%= render partial: 'options_delete', locals: {object: download, instance_name: download.title} %>
  </td>
<% end %>
