<% content_for :title, "#{@office.name}" %>

<div class="row columns">
	<h1><%= yield :title %></h1>
</div>

<div class="row columns" data-equalizer data-equalize-on="medium">
    <%= @office.address %><br/>
    <%= @office.city %><br/>
    <%= @office.region %><br/>
    <%= @office.zip %><br/>
    <%= t "countries.#{@office.country}" %><br/>
    <%= @office.phone %><br/>
    <%= @office.email %>
    <%= link_to "back to offices page", admin_offices_path, class: "admin-back-link" %>
</div>