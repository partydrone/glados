<%= form_for [:admin, @media_download], validate: true do |f| %>
  <div class="row">
    <%= content_tag :div, class: 'medium-8 columns' do %>
      <%= f.label :current_image %>
      <%= attachment_image_tag @media_download, :file %>
    <% end if @media_download.file && @media_download.file.exists? %>
    <div class="medium-4 columns">
      <%= f.label :file %>
      <%= f.attachment_field :file, direct: true, presigned: true %>
    </div>
  </div>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit nil, class: 'button radius' %>
<% end %>
