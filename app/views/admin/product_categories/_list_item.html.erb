<% cache list_item do %>
  <%= content_tag_for :tr, list_item do %>
    <td class="handle admin-table-move">
      <%= image_tag 'icons/ellipsisup-small.svg', class: 'small-icon' %>
    </td>
    <td class="admin-left-edit">
      <%= render partial: 'options_edit', locals: {object: list_item, instance_name: list_item.name} %>
    </td>
    <td class="admin-table-icon">
      <%= attachment_image_tag list_item, :icon_image, fallback: 'http://placehold.it/20/eaa800/ffffff', style: 'height: 1em;' %>
    </td>
    <td>
      <%= list_item.name %>
    </td>
    <td>
      <%= list_item.product_type.name %>
    </td>
    <td class="admin-right-delete">
      <%= render partial: 'options_delete', locals: {object: list_item, instance_name: list_item.name} %>
    </td>
  <% end %>
<% end %>
