<%= form_for [:admin, @territory], validate: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :country, class:"select-label"%>
  <%= f.select :country, COUNTRIES.invert.sort %>

  <%= f.label :office %>
  <%= f.select :office, Office.all.collect { |office| [office.name, office.id] } %>

  <%= f.label :dealer %>
  <%= f.select :dealer, Dealer.all.collect { |dealer| [dealer.name, dealer.id] }, {:include_blank => ''} %>

  <%= f.submit nil, class: 'button radius' %>
<% end %>