<%= form_for [:admin, @dealer], validate: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_area :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label "State or Region" %>
  <%= f.text_field :region %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :country_id, class:"select-label"%>
  <%= f.select :country_id, COUNTRIES.invert.sort %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.submit nil, class: 'button radius' %>
<% end %>