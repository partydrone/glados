<% content_for :title, 'Download Types' %>
<div class="row columns admin-table">
<h1>Download Types

<%= link_to new_admin_download_type_path, title: 'Create a new download_type' do %>
  <%= image_tag('icons/Plus.svg', class: "small-icon admin-add-icon") %>
<% end %>
</h1>

<table>
  <thead>
    <tr>
      <th width="30"></th>
      <th width="30"></th>
      <th>Name</th>
      <th>Translations</th>
      <th width="30"></th>
    </tr>
  </thead>
  <tbody id="download_types" data-update-path="<%= sort_admin_download_types_path %>">
    <%= render @download_types %>
  </tbody>
</table>
</div>
