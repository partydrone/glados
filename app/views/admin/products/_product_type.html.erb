<% cache product_type do %>
  <h2><%= product_type.name %></h2>
  <table>
    <thead>
      <tr>
        <th style="width: 50%;">Name</th>
        <th>Part Number</th>
        <th style="width: 3rem;"></th>
      </tr>
    </thead>
    <tbody id="products">
      <%= render partial: 'list_item', collection: product_type.products %>
    </tbody>
  </table>
<% end %>
