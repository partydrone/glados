<% cache blog_post do %>
  <%= content_tag_for :tr, blog_post do %>
    <td>
      <%= link_to blog_post.title, blog_post %>
    </td>
    <td>
      <%= l blog_post.posted_on.to_date, format: :short %>
    </td>
    <td>
      <%= l blog_post.updated_at.to_date, format: :short %>
    </td>
    <td style="text-align: right;">
      <%= render partial: 'options_menu', locals: {object: blog_post, instance_name: blog_post.title} %>
    </td>
  <% end %>
<% end %>
