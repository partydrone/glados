<div class="row columns">
  <h1>
    <%= @sales_terms_and_conditions_document.title %>
  </h1>
  <section>
    <p>(Effective <%= l @sales_terms_and_conditions_document.effective_on, format: :long %>)</p>
    <%= content_tag :p do %>
      <%= link_to t('.download'), attachment_url(@sales_terms_and_conditions_document, :file, filename: @sales_terms_and_conditions_document.title.parameterize), class: set_class_for_content_type(@sales_terms_and_conditions_document.file_content_type) %>
    <% end if @sales_terms_and_conditions_document.file && @sales_terms_and_conditions_document.file.exists? %>
    <%= raw markdown(@sales_terms_and_conditions_document.body) %>
  </section>
  <section>
    <p>
      <%= link_to "Archive", sales_terms_and_conditions_documents_path, class: "goto-new" %>
    </p>
  </section>
</div>
