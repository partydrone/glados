<%= form_for [:admin,@sales_terms_and_conditions_document] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, value: 'Wavetronix Domestic Terms and Conditions of Sale' %>
  <%= f.label :effective_on %>
  <%= f.date_field :effective_on, placeholder: 'yyyy-mm-dd' %>
  <%= f.label :body %>
  <%= f.text_area :body, rows: 20 %>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :file %>
      <%= f.attachment_field :file %>
    </div>
    <div class="medium-6 columns">
      <%= f.label :current_file %>
      <% if @sales_terms_and_conditions_document.file && @sales_terms_and_conditions_document.file.exists? %>
        <%= link_to attachment_url(@sales_terms_and_conditions_document, :file, filename: @sales_terms_and_conditions_document.title.parameterize), target: '_blank' %>
      <% else %>
        N/A
      <% end %>
    </div>
  </div>

  <%= f.submit nil, class: 'button radius' %>
<% end %>
